{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "install": {
      "outputs": ["node_modules/**"]
    },
    "build": {
      "dependsOn": ["install", "^build"],
      "outputs": [".next/**", "dist/**"]
    },
    "build:web": {
      "dependsOn": ["install", "^build"],
      "outputs": ["apps/web/.next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
