{
  "name": "equilibria-labs",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:dry": "turbo run build --dry",
    "build:web": "turbo run build --filter=@equilibria-labs/web",
    "build:web-verbose": "TURBO_LOG_VERBOSITY=verbose turbo run build --filter=@equilibria-labs/web",
    "start": "turbo run start",
    "lint": "turbo run lint --parallel",
    "dev:web": "turbo run dev --filter=@equilibria-labs/web",
    "dev:api": "turbo run dev --filter=@equilibria-labs/api",
    "dev:all": "turbo run dev --parallel",
    "build:types": "cd packages/shared-types && npm run build",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules || true",
    "clean:build": "rm -rf packages/shared-types/dist apps/web/.next apps/api/dist || true",
    "clean:all": "npm run clean && npm run clean:build && rm -f package-lock.json || true",
    "fresh-install": "npm run clean:all && pnpm install"
  },
  "devDependencies": {
    "turbo": "^1.12.4",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "0.10.0",
    "@supabase/auth-helpers-shared": "^0.7.0",
    "@supabase/ssr": "^0.0.10",
    "next": "^14.0.0"
  }
}
